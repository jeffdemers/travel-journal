<!-- Section 1 -->
<section id="intro" data-speed="6" data-type="background">
  <div class="container text-center">
    <h1 class="main-title">Save and share your travels</h1>
    <h1 class="main-title">with</h1>
    <h1 class="main-title">Travel Track</h1>
    <br>
    <br>
      <% if current_user %>
            <%= link_to 'See Travel Journals', journals_path, "class" => "btn-lg btn-success title-button" %>
      <% else %>
            <%= link_to 'Login to begin', '/auth/twitter', "class" => "btn-lg btn-success title-button" %>
      <% end %>
  </div>

</section>
<% if current_user %>
    <div class="container">
      <div class="page-header">
        <h1 class="text-center">Begin your adventure with Travel Track</h1>
      </div>
      <div class="">
        <div class="panel-body">
          <ul>
            <li class="main-li"><strong>Sign up for a free account today and enjoy these additional features:</strong></li>
            <li><strong>Privacy lock for more personal moments</strong></li>
            <li><strong>Journal maps show visited locations from your trip</strong></li>
            <li><strong>Share with anyone -- our responsive website looks great on any device</strong></li>
            <li><strong>Explore the adventures of fellow travel enthusiasts</strong></li>
          </ul>
        </div>
      </div>
    </div>
<% else %>
    <%= render 'welcome' %>
<% end %>
<!-- Section 2 -->
<section id="home" data-speed="4" data-type="background">
  <div class="container">
    </div>
  </div>
</section>
<!-- Section 3 -->
<section id="about" data-speed="2" data-type="background">
  <div class="container-main col-md-12">
    <h1 class="text-center">Discover new journals</h1>
    <% @journals.each do |journal| %>
          <%= image_tag journal.image.url(:small).to_s, "class" => "small-img" %>
    <% end %>
  </div>
</section>

