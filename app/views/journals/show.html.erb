<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @journal.user %>
</p>

<p>
  <strong>Title:</strong>
  <%= @journal.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @journal.content %>
</p>

<p>
  <strong>Image:</strong>
  <%= @journal.image %>
</p>

<p>
  <strong>Rank:</strong>
  <%= @journal.rank %>
</p>

<%= link_to 'Edit', edit_journal_path(@journal) %> |
<%= link_to 'Back', journals_path %>



<h2>Entries</h2>
<% if @journal.entries.length > 0 %>
    <% @journal.entries.each do |entry| %>
        <p>
          <b>Author:</b>
          <%= entry.author %>
        </p>

        <p>
          <b>Entry:</b>
          <%= entry.body %>
        </p>
    <% end %>
<% else %>
    <h3>No entries have been posted yet.</h3>
<% end %>



<h2>Add an Entry:</h2>
<%= form_for([@journal, @journal.entries.build]) do |f| %>
    <div class="field">
      <%= f.label :author %><br />
      <%= f.text_field :author %>
    </div>
    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>